rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function currentUserRole() {
      return request.auth != null
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
        : null;
    }

    function isAdmin() {
      return currentUserRole() == 'admin';
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      function isSelf() {
        return request.auth != null && request.auth.uid == userId;
      }

      function isSellerProfile() {
        return resource.data.role == 'seller';
      }

      // Allow users to manage their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if isSelf() || isAdmin();

      // Allow authenticated users to read any user profile (for shop details, chat search)
      allow get: if request.auth != null;

      // Allow querying seller profiles for authenticated users (chat search, product pages)
      allow list: if request.auth != null;
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      // Only sellers can write their own products
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.sellerId ||
        request.auth.uid == resource.data.userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Logs collection - only admins can read
    match /logs/{logId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if request.auth != null;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Buyers can read their own orders
      allow read: if request.auth != null && request.auth.uid == resource.data.buyerId;
      // Sellers can read orders where they are the seller or in sellerIds array
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.sellerId ||
        request.auth.uid in resource.data.sellerIds
      );
      // Admins can read and write all orders
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Buyers can create orders (checkout) and update their own orders (e.g., upload payment slip)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
      allow update: if request.auth != null && request.auth.uid == resource.data.buyerId;
      // Sellers can update orders where they're listed as a seller
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.sellerId ||
        request.auth.uid in resource.data.sellerIds
      );
    }
    
    // Chat Rooms collection
    match /chatRooms/{chatRoomId} {
      // Users can read chat rooms where they are a participant
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.customerId ||
        request.auth.uid == resource.data.sellerId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      // Users can create chat rooms
      allow create: if request.auth != null;
      // Participants and admins can update chat rooms
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.customerId ||
        request.auth.uid == resource.data.sellerId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Chat Messages collection
    match /chatMessages/{messageId} {
      // Users can read messages from their chat rooms
      allow read: if request.auth != null;
      // Users can create messages
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
      // Users can update their own messages
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid == resource.data.recipientId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Coupons collection
    match /coupons/{couponId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'seller'];
    }
    
    // Pending users collection - only admins can read/write
    match /pending_users/{pendingUserId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
